@model Libro

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="mb-0">@ViewBag.Title</h1>
        <a class="btn btn-outline-dark" asp-controller="Libro" asp-action="Index">Torna ai Libri</a>
    </div>

    <form asp-action="Edit" asp-controller="Libro" method="post" class="border rounded my-3 p-4 shadow-sm bg-light">
        <div class="mb-3">
            <label asp-for="Titolo" class="form-label"></label>
            <input asp-for="Titolo" class="form-control" />
            <span asp-validation-for="Titolo" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="IdAutore" class="form-label">Autore</label>
            <select asp-for="IdAutore" asp-items="ViewBag.Autori" class="form-select"></select>
            <span asp-validation-for="IdAutore" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Anno" class="form-label"></label>
            <input asp-for="Anno" class="form-control" type="number" min="0"/>
            <span asp-validation-for="Anno" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="IdPaese" class="form-label"></label>
            <select asp-for="IdPaese" asp-items="ViewBag.Paesi" class="form-select"></select>
            <span asp-validation-for="IdPaese" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="IdLingua" class="form-label"></label>
            <select asp-for="IdLingua" asp-items="ViewBag.Lingue" class="form-select"></select>
            <span asp-validation-for="IdLingua" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Prezzo" class="form-label">Prezzo (€)</label>
            <input asp-for="Prezzo" class="form-control" type="number" step="0.01" min="0"/>
            <span asp-validation-for="Prezzo" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Pagine" class="form-label"></label>
            <input asp-for="Pagine" class="form-control" type="number" min="1"/>
            <span asp-validation-for="Pagine" class="text-danger"></span>
        </div>

        <input type="hidden" asp-for="IdLibro"/>

        <button type="submit" class="btn btn-dark">Salva</button>
        <a class="btn btn-outline-secondary ms-2" asp-controller="Libro" asp-action="Index">Annulla</a>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
